@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - Psikotes Wisesa</title>
    <base href="@Url.Content("~/")">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="@Url.Content("~/DCT3_Standarisasi/Layout/notifications.css")" />
</head>
<body class="min-h-screen bg-cover bg-no-repeat bg-center" style="background-image: url('@Url.Content("~/images/login-banner.png")');">
    <div class="min-h-screen flex items-center justify-start">
        <div class="bg-white/95 shadow-xl rounded-xl p-8 w-full max-w-lg ml-16 text-[1.05rem]">
            <h1 class="text-[1.75rem] font-semibold mb-6">Login</h1>
            <form asp-controller="Account" asp-action="Login" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <div>
                    <label class="block text-gray-600 mb-1">User ID / Email / No Hp</label>
                    <input name="UserID" class="w-full border border-gray-300 rounded-lg px-3 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label class="block text-gray-600 mb-1">Password</label>
                    <div class="relative">
                        <input id="password" name="Password" type="password" class="w-full border border-gray-300 rounded-lg px-3 py-2.5 pr-12 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        <button type="button" id="togglePwd" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500">Hide</button>
                    </div>
                </div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 rounded-[200px]">Sign in</button>
            </form>
        </div>
    </div>

    @await Html.PartialAsync("_DCT3Notifications")

    <script>
        (function(){
            const btn = document.getElementById('togglePwd');
            const input = document.getElementById('password');
            btn.addEventListener('click', function(){
                const isPass = input.type === 'password';
                input.type = isPass ? 'text' : 'password';
                btn.textContent = isPass ? 'Show' : 'Hide';
            });
        })();
        (function(){
            var err = "@Convert.ToString(ViewData["ErrorMessage"])";
            if(err && err.length > 0){
                if(window.DCT3Modals){ DCT3Modals.open('failed', { message: err }); }
            }
        })();
    </script>
    <script src="@Url.Content("~/DCT3_Standarisasi/Layout/notifications.js")"></script>
</body>
</html>
